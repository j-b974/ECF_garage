<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">auteur</th>
        <th scope="col">message</th>
        <th scope="col">note</th>
        <th scope="col" colspan="2" class="text-center">action</th>
    </tr>
    </thead>
    <tbody>
    {% for avis in lstAvis %}
    <tr>
        <th scope="row">#{{ avis.id }}</th>
        <td>{{ avis.nom }} {{ avis.prenom ?? ''}}</td>
        <td>{{ avis.commentaire }}</td>
        <td>{{ avis.note }}</td>
        <td><a class="btn btn-warning" href={{ path('update_avis',{ id: avis.id }) }}> modifier</a></td>
        <td><a href="{{ path('delete_avis',{id:avis.id}) }}" class="btn btn-danger" data-delete data-token="{{ csrf_token('delete'~avis.id) }}" title="Attention la suppression sera definitive!!!" >Supprimer</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>